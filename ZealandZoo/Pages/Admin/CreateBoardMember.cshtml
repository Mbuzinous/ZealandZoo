@page
@model ZealandZoo.Pages.Administration.CreateBoardMemberModel
@{
}
<br />
<div class="articlesOfAssociationContainer">

    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto rounded border p-3">
                <h2 class="text-center mb-5">Ny Bestyrelsesmedlem</h2>
                @if (Model.ErrorMessage.Length > 0)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>@Model.ErrorMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    </div>
                }
                else if (Model.SuccessMessage.Length > 0)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>@Model.SuccessMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    </div>
                }

                <form method="post" enctype="multipart/form-data">

                    <div class="row mb-3">
                        <label class=" col-sm-4 col-form-label">FirstName</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="BoardMemberDto.FirstName">
                            <span asp-validation-for="BoardMemberDto.FirstName" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class=" col-sm-4 col-form-label">LastName</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" asp-for="BoardMemberDto.LastName"></textarea>
                            <span asp-validation-for="BoardMemberDto.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class=" col-sm-4 col-form-label">Description</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="BoardMemberDto.Description">
                            <span asp-validation-for="BoardMemberDto.Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class=" col-sm-4 col-form-label">AreaOfResponsibility</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="BoardMemberDto.AreaOfResponsibility">
                            <span asp-validation-for="BoardMemberDto.AreaOfResponsibility" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class=" col-sm-4 col-form-label">StudyProgramme</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="BoardMemberDto.StudyProgramme">
                            <span asp-validation-for="BoardMemberDto.StudyProgramme" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class=" col-sm-4 col-form-label">Semester</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="BoardMemberDto.Semester">
                            <span asp-validation-for="BoardMemberDto.Semester" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label class=" col-sm-4 col-form-label">Billedfil</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="BoardMemberDto.ImageFile">
                            <span asp-validation-for="BoardMemberDto.ImageFile" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="editButtonOpdater">Opret ny bestyrelses medlem</button>
                        </div>
                        <div class="col-sm-4 d-grid">
                            <a class="editButtonFortryd" href="/Admin/BoardMemberOverview" role="button">Fortryd</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>