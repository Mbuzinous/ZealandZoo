@page
@using ZealandZoo.Models
@model ZealandZoo.Pages.CalendarModel
@{
    ViewData["Title"] = "Kalender";
}



<div class="gridContainerCalendarBoard">
    <h1>List of events</h1>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createEvent">
        Create Event
    </button>

    <!-- Modal -->
    <div class="modal fade" id="createEvent" tabindex="-1" aria-labelledby="createEventLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="createEventLabel">Create an Event</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-page-handler="create">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.Event.Subject" class="control-label"></label>
                            <input asp-for="@Model.Event.Subject" class="form-control" />
                            <span asp-validation-for="@Model.Event.Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Event.Description" class="control-label"></label>
                            <input asp-for="@Model.Event.Description" class="form-control" />
                            <span asp-validation-for="@Model.Event.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Event.Start" class="control-label"></label>
                            <input asp-for="@Model.Event.Start" class="form-control" />
                            <span asp-validation-for="@Model.Event.Start" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Event.End" class="control-label"></label>
                            <input asp-for="@Model.Event.End" class="form-control" />
                            <span asp-validation-for="@Model.Event.End" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Event.ThemeColor" class="control-label"></label>
                            <input asp-for="@Model.Event.ThemeColor" class="form-control" />
                            <span asp-validation-for="@Model.Event.ThemeColor" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="@Model.Event.IsFullDay" class="text-danger"></span>
                            <div class="form-check">
                                <input asp-for="@Model.Event.IsFullDay" value="False" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                                <label asp-for="@Model.Event.IsFullDay" class="form-check-label" for="flexRadioDefault1">
                                    Flase
                                </label>
                            </div>
                            <div class="form-check">
                                <input asp-for="@Model.Event.IsFullDay" value="True" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                                <label asp-for="@Model.Event.IsFullDay" class="form-check-label" for="flexRadioDefault2">
                                    True
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thread>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Subject
                </th>
                <th>
                    Description
                </th>
                <th>
                    Start Time
                </th>
                <th>
                    End Time
                </th>
                <th>
                    ThemeColor
                </th>
                <th>
                    IsFullDay
                </th>
            </tr>
        </thread>
        <tbody>
            @foreach (Event item in Model.EventList)
            {
                <tr>
                    <td>
                        @item.EventID
                    </td>
                    <td>
                        @item.Subject
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.Start
                    </td>
                    <td>
                        @item.End
                    </td>
                    <td>
                        @item.ThemeColor
                    </td>
                    <td>
                        @item.IsFullDay
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Delete">
                            <input type="submit" value="@item.EventID" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



