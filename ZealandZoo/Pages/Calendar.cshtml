@page
@using ZealandZoo.Models
@model ZealandZoo.Pages.CalendarModel
@{
    ViewData["Title"] = "Dynamic Calendar";
}

<div class="gridContainerCalendarBoard">

    <div id="calendar-controls">
        <button id="prev">Previous</button>
        <button id="next">Next</button>
        <button id="toggle-view">Toggle View</button>
        <button id="current-month">Current Month</button>
    </div>

    <div id="calendar-container"></div>

    <div id="event-form">
        <form method="post" asp-page-handler="AddEvent">
            <input type="hidden" asp-for="Event.Id" />
            <div>
                <label asp-for="Event.Date"></label>
                <input type="date" asp-for="Event.Date" />
            </div>
            <div>
                <label asp-for="Event.Title"></label>
                <input type="text" asp-for="Event.Title" />
            </div>
            <div>
                <label asp-for="Event.Description"></label>
                <input type="text" asp-for="Event.Description" />
            </div>
            <button type="submit">Add Event</button>
        </form>
    </div>

    @section Scripts {
        <script src="~/js/calendar.js"></script>
    }

</div>



