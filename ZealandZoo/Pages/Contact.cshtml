@page
@model ZealandZoo.Pages.ContactModel
@{
}

<form method="post">
    <div>
        <div class="row mb-3">
            <label class=" col-sm-4 col-form-label">Your Email</label>
            <div class="col-sm-8">
                <textarea class="form-control" asp-for="Mail.FromEmailAddress"></textarea>
                <span asp-validation-for="Mail.FromEmailAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class=" col-sm-4 col-form-label">Subject</label>
            <div class="col-sm-8">
                <textarea class="form-control" asp-for="Mail.Subject"></textarea>
                <span asp-validation-for="Mail.Subject" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class=" col-sm-4 col-form-label">Message</label>
            <div class="col-sm-8">
                <textarea class="form-control" asp-for="Mail.Message"></textarea>
                <span asp-validation-for="Mail.Message" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Send</button>
    </div>
</form>
